<%= simple_form_for @event do |f| %>
  <div class="container" style="margin-bottom: 100px;">
    <%= f.input :end_date, as: :hidden, input_html: { value: @date } %>
    <%= f.input :name %>
    <%= f.input :category, :collection => ["Work", "Social", "Reminder", "Birthday", "Workout"]%>
    
    <div class="form-input-times" style="display: flex; justify-content: space-around;">
      <% if @date == "" || @date.nil? %>
        <%= f.input :start_date, label: "Date" %>
      <% end %>
      <%= f.input :start_time %>
      <%= f.input :end_time %>
    </div>

    <%= f.input :previous_location %>
    <%= f.input :event_location %>
    
    <div style="display: flex; justify-content: space-around;">
      <%= f.input :travel_type, :collection => ["Car", "Pedestrian"]  %>
      <%= f.input :time_difference, as: :hidden, input_html: { id: "time_difference", hidden: true } %>
      <div style="display: flex; flex-direction: column; margin-top: 12px;">
        <p style="z-index: 5; right: -25px; top: -27px;" id="time_difference_display"></p>
        <button style="border: none; border-radius: 14px; height: 42px; width: 170px; box-shadow: 1px 1px 1px rgba(0, 0, 0, 0.2);" type="button" id="cal_time">Calculate time</button>
      </div>
    </div>
    
    <%= f.input :description %>
  </div>

  <div class="footer">
    <%= link_to "Back", daily_path, class:"btn btn-danger back_button", style:"text-align: center;"%>
    <%= f.button :submit, class:"btn new_event_button" %>
  </div>
<% end %>

