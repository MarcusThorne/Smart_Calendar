<%= simple_form_for @event do |f| %>
  <div class="container" style="margin-bottom: 100px;">
    <%= f.input :end_date, as: :hidden, input_html: { value: @date } %>
    <%= f.input :name %>
    <%= f.input :category %>
    
    <div style="display: flex; justify-content: space-around;">
      <%= f.input :start_time %>
      <%= f.input :end_time %>
    </div>

    <%= f.input :previous_location %>
    <%= f.input :event_location %>
    <%= f.input :travel_type, :collection => ["car", "pedestrian"]  %>
    <%= f.input :time_difference, :label =>"Travel time", input_html: { id: "time_difference", hidden: true } %>
    
    <p id="time_difference_display"></p>
    <button type="button" id="cal_time" class="mb-4">Calculate time</button>
    <br />
    
    <%= f.input :description %>
  </div>

  <div class="footer">
    <%= link_to "Back", weekly_path, class:"btn btn-danger back_button", style:"text-align: center;"%>
    <%= f.button :submit, class:"btn new_event_button" %>
  </div>
<% end %>